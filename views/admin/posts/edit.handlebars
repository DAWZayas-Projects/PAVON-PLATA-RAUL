<h1>Editar Post</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Titulo</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Insertar título" value="{{post.title}}">
    </div>
    <div class="form-group">
        <label for="status">Categoría</label>
        <select name="category" id="status" class="form-control" value="{{post.category.name}}">
            {{#select post.category}}
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-check">
        <label for="allowComments" class="form-check-label">
            <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments" {{#if post.allowComments}} checked {{/if}}>
            Permitir comentarios
        </label>
    </div>

    <div class="form-group">
        <label for="body">Cuerpo del post</label>
        <textarea name="body" cols="30" rows="10" class="form-control" id="body" placeholder="Inserte el cuerpo del post" >{{post.body}}</textarea>
    </div>

    <button class="btn btn-primary" type="submit">Editar Post</button>
</form>