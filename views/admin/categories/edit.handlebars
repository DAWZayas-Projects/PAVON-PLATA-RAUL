<div class="row">
    <div class="col-sm-4">
        <h1>Editar categoria</h1>
        <form action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
            <div class="input-group">
                <input type="text" name="name" value="{{category.name}}" placeholder="Introduzca nombre de categoría" class="form-control">
                <div class="input-group-append"><button class="btn btn-primary">Editar categoría</button></div>
            </div>
        </form>
    </div>
</div>