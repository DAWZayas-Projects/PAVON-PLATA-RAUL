{{#each posts}}
    <div class="card mb-4">
        <img class="card-img-top" src="/uploads/{{file}}" alt = "image">
        <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <p class="card-text">{{body}}</p>
            <a href="/post/{{id}}" class="btn btn-primary">Leer más &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            Fecha de creación de entrada: {{formatDate date 'HH:mm:ss Do/MMMM/YYYY'}} , por {{author.firstName}} {{author.lastName}}
        </div>
    </div>
{{else}}
    <h2>Actualmente no hay ningún post.</h2>
{{/each}}